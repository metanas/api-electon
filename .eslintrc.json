{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "quotes": [
    "error",
    "single"
  ],
  "semi": [
    "error",
    "never"
  ],
  "indent": [
    "error",
    "tab"
  ],
  "linebreak-style": [
    "error",
    "unix"
  ],
  "rules": {
  }
}
